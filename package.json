{
  "name": "andrenanninga.com",
  "version": "0.1.0",
  "private": true,
  "author": "",
  "scripts": {
    "start": "next",
    "build": "next build",
    "lint": "eslint .",
    "analyze": "ANALYZE=1 next build",
    "format": "prettier --write '*/**/*.{ts,tsx,css,md,json}'",
    "type-check": "tsc"
  },
  "dependencies": {
    "@mdx-js/loader": "^0.20.3",
    "@zeit/next-mdx": "^1.2.0",
    "@zeit/next-typescript": "^1.1.1",
    "next": "^7.0.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-typography": "^0.16.19",
    "styled-components": "^4.1.2",
    "typography": "^0.16.19",
    "typography-theme-alton": "^0.16.19"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@strv/eslint-config-javascript": "^9.1.1",
    "@strv/eslint-config-react": "^1.0.2",
    "@strv/eslint-config-typescript": "^1.1.0",
    "@types/next": "^7.0.5",
    "@types/node": "^10.12.15",
    "@types/react-dom": "^16.0.11",
    "@types/styled-components": "^4.1.4",
    "babel-eslint": "^10.0.1",
    "babel-plugin-styled-components": "^1.10.0",
    "eslint": "^5.10.0",
    "eslint-config-prettier": "^3.3.0",
    "husky": "^1.2.1",
    "lint-staged": "^8.1.0",
    "next-server": "^8.1.0",
    "patch-package": "^6.1.0",
    "prettier": "^1.15.3",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.1",
    "typescript": "^3.2.2",
    "webpack-bundle-analyzer": "^3.0.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "stylelint",
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "stylelint",
      "prettier --write",
      "git add"
    ],
    "*.{json,md,mdx}": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "stylelint",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "@strv/javascript/environments/react/v16",
      "@strv/eslint-config-react/optional",
      "@strv/eslint-config-react/style",
      "@strv/eslint-config-typescript",
      "@strv/eslint-config-typescript/style",
      "prettier",
      "prettier/react"
    ],
    "root": true,
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    }
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-styled-components"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-styled-components"
    ],
    "rules": {}
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
