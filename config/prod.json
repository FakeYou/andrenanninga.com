{
  "source": "./src",
  "destination": "./build",
  "clean": true,

  "define": {
    "development": true
  },

  "markdown": {
    "smartypants": true,
    "gfm": true,
    "tables": true
  },

  "layouts": {
    "engine": "handlebars",
    "directory": "src/layouts",
    "pattern": "contents/**/*.html"
  },

  "drafts": {},

  "collections": {
    "articles": {
      "sortBy": "date",
      "reverse": true
    }
  },

  "metallic": {},

  "sass": {
    "outputDir": "css"
  },

  "uglify": {
    "filter": "**/!(*.min).js",
    "removeOriginal": true
  },

  "ignore": [
    "layouts/*",
    "layouts/partials/*"
  ],

  "moveup": {
    "pattern": "contents/**/*.*"
  },

  "watch": false,  
  "serve": false

}