{
  "source": "./src",
  "destination": "./build",
  "clean": true,

  "define": {
    "development": true
  },

  "markdown": {
    "smartypants": true,
    "gfm": true,
    "tables": true
  },

  "layouts": {
    "engine": "handlebars",
    "directory": "src/layouts"
  },

  "collections": {
    "pages": {
      "sortBy": "date",
      "reverse": true
    }
  },

  "metallic": {},

  "ignore": [
    "layouts/*"
  ],

  "moveup": {
    "pattern": "contents/**/*.*"
  },

  "watch": false,
  "serve": false

}