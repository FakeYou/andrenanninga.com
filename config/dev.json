{
  "source": "./src",
  "destination": "./build",
  "clean": true,

  "url": "localhost",
  "protocol": "http",

  "define": {
    "development": true
  },

  "markdown": {
    "smartypants": true,
    "gfm": true,
    "tables": true
  },

  "layouts": {
    "default": "default.html",
    "engine": "handlebars",
    "directory": "src/layouts",
    "pattern": "contents/**/*.html"
  },

  "drafts": {},

  "collections": {
    "articles": {
      "sortBy": "date",
      "reverse": true
    }
  },

  "metallic": {},

  "sass": {
    "outputDir": "css"
  },

  "uglify": {
    "filter": "**/!(*.min).js",
    "removeOriginal": true
  },

  "ignore": [
    "layouts/*",
    "layouts/partials/*"
  ],

  "moveup": {
    "pattern": "contents/**/*.*"
  },

  "watch": {
    "livereload": true,
    "paths": {
      "${source}/**/*.*": true,
      "${source}/layouts/**/*.html": "**/*.*",
      "${source}/assets/**/*.*": "**/*.*",
      "${source}/css/**/*.scss": "**/*.*"
    }
  },
  
  "serve": {
    "verbose": false
  }

}