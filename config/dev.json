{
  "source": "./src",
  "destination": "./build",
  "clean": true,

  "define": {
    "development": true
  },

  "markdown": {
    "smartypants": true,
    "gfm": true,
    "tables": true
  },

  "layouts": {
    "engine": "handlebars",
    "directory": "src/layouts"
  },

  "collections": {
    "pages": {
      "sortBy": "date",
      "reverse": true
    }
  },

  "metallic": {},

  "sass": {
    "outputDir": "css"
  },

  "ignore": [
    "layouts/*"
  ],

  "moveup": {
    "pattern": "contents/**/*.*"
  },

  "watch": {
    "livereload": true,
    "paths": {
      "${source}/**/*.*": true,
      "${source}/layouts/**/*.html": "**/*.*",
      "${source}/assets/**/*.*": "**/*.*",
      "${source}/css/**/*.scss": "**/*.*"
    }
  },
  
  "serve": {
    "verbose": false
  }

}